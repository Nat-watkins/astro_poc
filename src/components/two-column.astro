---
import Icon from "./icon.astro";

type Props = {
    image: string;
    title: string;
    buttonTitle: string;
    buttonLink: string;
    buttonUnstyled?: boolean;
    imageLast?: boolean;
    icon?: boolean;
};

const {
    image,
    title,
    buttonTitle,
    buttonLink,
    imageLast,
    buttonUnstyled,
    icon,
} = Astro.props;
---

<div class="minw-15 padding-y-5 padding-x-3 grid-container">
    <div class="grid-row grid-gap-4 desktop:grid-gap-6 padding-y-7">
        <div class={`tablet:grid-col display-flex flex-align-center tablet:flex-justify-center${imageLast ? " desktop:order-last" : null}`}
        >
            <img class="width-auto height-full" src={image} alt="" />
        </div>
        <div
            class="tablet:grid-col padding-top-4 tablet:padding-top-0 display-flex flex-align-center"
        >
            <div>
                <h2 id="eligible-model-entities">{title}</h2>
                  <slot />
                <p>
                    <a
                        href={buttonLink}
                        class={`usa-button${buttonUnstyled ? " usa-button--unstyled" : "" }`}
                        >{buttonTitle}
                    {icon ? <Icon icon="arrow_forward" color={`${buttonUnstyled ? "base-darkest" : "white"}`} size={3}/> : null}
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
