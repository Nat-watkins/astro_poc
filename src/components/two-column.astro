---
import ArrowForward from "#assets/uswds/img/usa-icons/arrow_forward.svg";

type Props = {
    image: string;
    title: string;
    button: string;
    buttonLink: string;
    imageLast?: boolean;
};

const {
    image,
    title,
    button,
    buttonLink,
    imageLast,
} = Astro.props;
---

<div class="minw-15 padding-y-7 padding-x-3 grid-container">
    <div class="grid-row grid-gap-4 desktop:grid-gap-6 padding-y-7">
        <div class={`tablet:grid-col display-flex flex-align-center tablet:flex-justify-center${imageLast ? " desktop:order-last" : ""}`}
        >
            <img class="width-auto height-full" src={image} alt="" />
        </div>
        <div
            class="tablet:grid-col padding-top-4 tablet:padding-top-0 display-flex flex-align-center"
        >
            <div>
                <h2 id="eligible-model-entities">{title}</h2>
                  <slot />
                <p>
                    <a
                        href={buttonLink}
                        class="usa-button usa-button--unstyled"
                        >{button}
                        <ArrowForward class="text-white" />
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
